; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.php]
indent_size = 4
indent_style = space
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false